      <TextField fx:id="title" layoutX="313.0" layoutY="54.0" />
      <TextArea fx:id="description" layoutX="313.0" layoutY="141.0" prefHeight="200.0" prefWidth="200.0" />
      <Label layoutX="313.0" layoutY="37.0" text="Title" />
      <Label layoutX="313.0" layoutY="124.0" text="Description" />
      <Label layoutX="14.0" layoutY="241.0" text="Image" />
      <Button layoutX="472.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#onSaveClicked" text="Save" />
      <Button layoutX="408.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#onLoadClicked" text="Load" />
   </children>

</AnchorPane>
